@model UserSignInViewModel

@{
	Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml";
}



<body class="main-content">
	<div class="container">
		<div class="row">
			<div class="col-12 mt-3">
				<img src="~/images/icon.png" style="margin-left:523px;" alt="Alternate Text" />
			</div>
		</div>


		<div class="row">
			<div class="col-3">
			</div>
			<div class="col-6">
				<div class="m-1 p-1 text-white justify-content-center">
					<h3 class="text-light text-center">Giriş Ekranı</h3>
				</div>
			</div>
			<div class="col-3">
			</div>

		</div>



		<div class="row">
			<div class="col-3">
				<span></span>
			</div>

			<div class="col-6">
				<div class="row">
					<div class="col-2"><span></span></div>
					<div class="col-8">
						<form role="form" class="m-1 p-1" asp-action="Index" asp-controller="Login" method="post">

							<div class="text-danger text-left mb-2" asp-validation-summary="ModelOnly">
							</div>

							<div class="form-group">
								<span asp-validation-for="@Model.email" class="text-danger"></span>
								<input type="text" class="form-control" asp-for="@Model.email" placeholder="Mail adresiniz" />
							</div>

							<div class="form-group">
								<span asp-validation-for="@Model.password" class="text-danger"></span>
								<input type="password" class="form-control" asp-for="@Model.password" placeholder="Şifre" />
							</div>
							@if (ViewBag.Message != null)
							{
								<div class="alert alert-danger" role="alert">
									@ViewBag.Message
								</div>
							}
							<button asp-action="Index" type="submit" class="btn btn-block btn-primary mb-3 text-white">Giriş Yap</button>
							<a asp-action="ForgetPassword" class="text-muted text-center"><p> Sifremi Unuttum</p></a>

						</form>


					</div>
					<div class="col-2"><span></span></div>
				</div>
			</div>
			<div class="col-3">
				<span></span>
			</div>

		</div>

	</div>
</body>





