@model Advance
@{
    ViewData["Title"] = "AdvanceDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content" id="panel">
    <!-- Topnav -->
    <!-- Header -->
    <!-- Header -->
    <div class="header pb-0 d-flex align-items-center" style="min-height: 100px; background-image: url(~/argon/assets/img/theme/profile-cover.jpg); background-size: cover; background-position: center top;">
        <!-- Mask -->
        <span class="mask bg-gradient-default opacity-8"></span>
        <!-- Header container -->
        <div class="container-fluid align-items-center ">
            <div class="container">
                <div class="col-lg-10 col-md-offset-1">
                    @*<h1 class="display-2 text-white">Merhaba @Model.Name @Model.Surname</h1>*@
                    <p class="text-white text-center mt-0 mb-1"></p>
                </div>
            </div>
        </div>
    </div>
    <!-- Page content -->
    <div class="container-fluid mt--6">
        <div class="row">
            <div class="col">
                <div class="card">
                    <!-- Card header -->
                    <div class="card-header border-0">
                        <h3 class="mb-0"> Avans Detay Sayfası </h3>
                    </div>
                    <!-- Light table -->
                    <div class="card-body border-0">

                        <div class="container-fluid">

                            <dl class="row mt-2">
                                <dt class="col-sm-2 mb-1">
                                    Avans Miktari
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.AdvanceAmount)
                                </dd>
                                <dt class="col-sm-2 mb-1">
                                    Talep Tarihi
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.CreationDate)
                                </dd>
                                <dt class="col-sm-2 mb-1">
                                    Onaylanma Tarihi
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.ApprovalDate)
                                </dd>
                             

                                <dt class="col-sm-2 mb-1">
                                    Onay Durumu
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Approval)
                                </dd>
                               
                                <dt class="col-sm-2 mb-1">
                                    Açıklama
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Description)
                                </dd>


                            </dl>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <input type="hidden" asp-for="ID" />

                                @if (Model.Approval == Approval.OnayBekliyor)
                                {
                                    <a asp-action="UpdateAdvance" asp-route-id="@Model.ID" class="btn btn-info mb-4 ml-2">Güncelle</a>
                                    <a asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger mb-4 ml-2">Sil</a>
                                }
                                <a asp-action="Index" class="btn btn-primary mb-4 ml-2">Avans Listesine Dön</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/argon/assets/vendor/jquery/dist/jquery.min.js"></script>
<script src="~/argon/assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/argon/assets/vendor/js-cookie/js.cookie.js"></script>
<script src="~/argon/assets/vendor/jquery.scrollbar/jquery.scrollbar.min.js"></script>
<script src="~/argon/assets/vendor/jquery-scroll-lock/dist/jquery-scrollLock.min.js"></script>
<!-- Argon JS -->
<script src="~/argon/assets/js/argon.js?v=1.2.0"></script>
