@model AdvanceVM
@{
    ViewData["Title"] = "UpdateAdvance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content" id="panel">
    <!-- Topnav -->
    <!-- Header -->
    <!-- Header -->
    <div class="header pb-0 d-flex align-items-center" style="min-height: 100px; background-image: url(~/argon/assets/img/theme/profile-cover.jpg); background-size: cover; background-position: center top;">
        <!-- Mask -->
        <span class="mask bg-gradient-default opacity-8"></span>
        <!-- Header container -->
        <div class="container-fluid align-items-center ">
            <div class="container">
                <div class="col-lg-10 col-md-offset-1">
                    @*<h1 class="display-2 text-white">Merhaba @Model.Name @Model.Surname</h1>*@
                    <p class="text-white text-center mt-0 mb-1"></p>
                </div>
            </div>
        </div>
    </div>




    <div class="container-fluid mt--6">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Message
            </div>}
        <div class="row">
            <div class="col">
                <div class="card">
                    <!-- Card header -->
                    <div class="card-header border-0">
                        <h3 class="mb-0"> Avans Düzenle Sayfası </h3>
                    </div>
                    <!-- Light table -->
                    <div class="card-body border-0">

                        <form asp-controller="Advance" asp-action="UpdateAdvance" enctype="multipart/form-data" class="">

                            <div class="col-12">
                                <label asp-for="AdvanceAmount" class="form-label">Gider Miktarı</label>
                                <input type="number" asp-for="AdvanceAmount" class="form-control" oninvalid="this.setCustomValidity('Lütfen bir sayı giriniz')" oninput="this.setCustomValidity('')">
                                <span asp-validation-for="AdvanceAmount" class="text-danger"></span>
                            </div><br />
                            <div class="col-12">
                                <label asp-for="Description" class="form-label">Açıklama</label>
                                <textarea asp-for="Description" rows="5" cols="50" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div><br />

                            <div class="col-12">
                                <label asp-for="Currency" class="form-label">Para Birimi</label>
                                <select asp-for="Currency" class="form-control" asp-items="@Html.GetEnumSelectList<Currency>();"></select>
                                <span asp-validation-for="Currency" class="text-danger"></span>
                            </div><br />

                            <div class="col-12">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" value="Update" class="btn btn-primary">Düzenle</button>
                                <a asp-action="Index" class="btn btn-link">Harcama Listesine Dön</a>
                            </div>
                        </form>
                        @section Scripts {
                            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/argon/assets/vendor/jquery/dist/jquery.min.js"></script>
<script src="~/argon/assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/argon/assets/vendor/js-cookie/js.cookie.js"></script>
<script src="~/argon/assets/vendor/jquery.scrollbar/jquery.scrollbar.min.js"></script>
<script src="~/argon/assets/vendor/jquery-scroll-lock/dist/jquery-scrollLock.min.js"></script>
<!-- Argon JS -->
<script src="~/argon/assets/js/argon.js?v=1.2.0"></script>
