                                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                                </div>
                                <input class="form-control" placeholder="Search" type="text">
                            </div>
                        </div>
                        <button type="button" class="close" data-action="search-close" data-target="#navbar-search-main" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </form>


                </div>
            </div>
        </nav>
        <!-- Header -->
        <!-- Header -->
        <div class="header d-flex align-items-center" style="height:50px; background-image: url(~/argon/assets/img/theme/profile-cover.jpg); background-size: cover; background-position: center top;">
            <!-- Mask -->
            @*<span class="mask bg-gradient-gray opacity-8"></span>*@
            <!-- Header container -->
            <div class="container-fluid align-items-center ">
