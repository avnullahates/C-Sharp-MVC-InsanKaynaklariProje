            </div>
        </div>
        <!-- Page content -->
        <div class="container-fluid mt-auto">
            <div class="row">
                <div class="col-xl-4 order-xl-2" style="margin: auto;">
                    <div class="card card-profile" style="background-color:lightpink;">
                        @*<img src="~/argon/assets/img/theme/img-1-1000x600.jpg" alt="Image placeholder" class="card-img-top">*@
                        <div class="row justify-content-center">

                            <div class="col-lg-3 order-lg-2">
                                <div class="card-profile-image ml-auto">
                                    <a href="#">
                                        <img src="~/images/man_default.png" class="rounded-circle">
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4" style="background-color:lightpink;">
                            <div class="d-flex justify-content-between">
                                <a href="/Advance/Index" class="btn btn-m btn-info  mr-4 ml-1">Düzenle</a>
