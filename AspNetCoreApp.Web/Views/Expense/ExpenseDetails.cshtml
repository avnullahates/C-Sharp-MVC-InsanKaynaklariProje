@model CoreLayer.Entities.Expense

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





@if (ViewBag.Message != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
}


<div class="main-content" id="panel">
    <!-- Topnav -->
    <!-- Header -->
    <!-- Header -->
    <div class="header pb-0 d-flex align-items-center" style="min-height: 24px; background-image: url(~/argon/assets/img/theme/profile-cover.jpg); background-size: cover; background-position: center top;">
        <!-- Mask -->
        <!-- Header container -->
        <div class="container-fluid align-items-center ">
        </div>
    </div>

    <div class="container-fluid mt-2">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header border-0">
                        <h3 class="mb-2"> Harcama Detay Sayfası </h3>
                    </div>
                    <div class="card-body">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-lg-3 col-md-6 label mb-1">Harcama Tutarı</div>
                                <div class="col-lg-3 col-md-6"> @Html.DisplayFor(model => model.ExpenseAmount) TL</div>      
                            </div>                          
                            <div class="row">               
                                <div class="col-lg-3 col-md-6 label mb-1">Harcama Türü</div>
                                <div class="col-lg-3 col-md-6"> @Html.DisplayFor(model => model.TypeOfExpenses)</div>        
                            </div>                          
                            <div class="row">               
                                <div class="col-lg-3 col-md-6 label mb-1">Açıklama</div>
                                <div class="col-lg-3 col-md-6"> @Html.DisplayFor(model => model.Description)</div>          
                            </div>                         
                            <div class="row">              
                                <div class="col-lg-3 col-md-6 label mb-1">Onay Durumu</div>
                                <div class="col-lg-3 col-md-6"> @Html.DisplayFor(model => model.Approval)</div>
                            </div>
                            @if (@Model.Invoce != null)
                            {
                                <div class="row">

                                    <div class="col-lg-3 col-md-6 label mb-1">Fatura</div>

                                    <div class="col-lg-3 col-md-6"> <a href="~/Files/Invoices/@Model.Invoce">
                                        <img src="~/Files/Invoices/@Model.Invoce" width="100" height="100">
                                    </a>
                                    </div>
                                </div>
                            }

                            else
                            {
                                <div class="row">
                                    <div class="col-lg-3 col-md-6 label mb-1">Fatura</div>
                                </div>
                            }

                            <div class="row mb-1">
                                <div class="col-lg-3 col-md-6 label mb-1">Oluşturma Tarihi</div>
                                <div class="col-lg-3 col-md-6"> @Html.DisplayFor(model => model.CreationDate)</div>
                            </div>
                            <form asp-controller="Expense" asp-action="ExpenseDetails">
                                <div class="">
                                    <input type="hidden" asp-for="ID" />
                                    <a asp-action="UpdateExpense" asp-route-id="@Model.ID" class="btn btn-success mt-2">Güncelle</a>
                                    <a asp-controller="Expense" asp-action="Index" class="btn btn-link mt-2 ml-2">Harcama Listesine Dön</a>
                                </div>
                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
