@model CoreLayer.Entities.Personnel

@{
    ViewData["Title"] = "Kullanıcı Ekleme";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with a Dashboard for Bootstrap 4.">
    <meta name="author" content="Creative Tim">
    <title>Argon Dashboard - Free Dashboard for Bootstrap 4</title>
    <!-- Favicon -->
    <link rel="icon" href="~/argon/assets/img/brand/favicon.png" type="image/png">
    <!-- Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700">
    <!-- Icons -->
    <link rel="stylesheet" href="~/argon/assets/vendor/nucleo/css/nucleo.css" type="text/css">
    <link rel="stylesheet" href="~/argon/assets/vendor/@@fortawesome/fontawesome-free/css/all.min.css" type="text/css">
    <!-- Argon CSS -->
    <link rel="stylesheet" href="~/argon/assets/css/argon.css?v=1.2.0" type="text/css">
    <title>IK Application</title>
</head>
<div class="container">

    <section class="section register min-vh-50 d-flex flex-column align-items-center justify-content-center py-2">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12">
                    <h2 class="ml-0">Personel Ekle</h2>
                    <hr />
                </div>

                <div class="col-lg-12 col-md-6 d-flex flex-column align-items-center justify-content-center">
                    <form asp-area="" asp-controller="Manager" asp-action="CreatePersonnel" class="row g-3" enctype="multipart/form-data" method="post">


                        <div class="col-5">
                            <div class="col-12 mb-2">
                                <label asp-for="ImagePath" class="form-label">Fotoğraf</label>
                                <span asp-validation-for="ImagePath" class="text-danger"></span>
                                <input asp-for="ImagePath" type="file" accept="image/*" class="form-control" id="ImagePath" />

                            </div>
                            <div class="col-12 mb-2">
                                <label asp-for="Name" class="form-label">@Html.DisplayNameFor(model => model.Name)</label><br />
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <input asp-for="Name" type="text" class="form-control mt-1" id="Name">

                            </div>
                            <div class="col-12 mb-2">
                                <label asp-for="Surname" class="form-label">@Html.DisplayNameFor(model => model.Surname)</label><br />
                                <span asp-validation-for="Surname" class="text-danger"></span>
                                <input asp-for="Surname" type="text" class="form-control mt-1" id="Surname">

                            </div>
                           
                        </div>

                        <div class="col-1">
                            <span></span>
                        </div>

                        <div class="col-5">
                            <div class="col-12 mb-2">
                                <label asp-for="Department" class="form-label">@Html.DisplayNameFor(model => model.Department)</label>
                                <span asp-validation-for="Department" class="text-danger"></span>
                                <input asp-for="Department" type="text" class="form-control" id="Department">

                            </div>
                            <div class="col-12 mb-2">
                                <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                <input asp-for="PhoneNumber" type="tel" name="phone" pattern="[0-9]{4}[0-9]{3}[0-9]{4}" class="form-control" id="PhoneNumber">

                            </div>

                            <div class="col-12 mb-2">
                                <label asp-for="BirthDate" class="form-label">@Html.DisplayNameFor(model => model.BirthDate)</label><br />
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                                <input asp-for="BirthDate" type="date" class="form-control mt-1" id="BirthDate">

                            </div>
                            <div class="col-12">
                                <label asp-for="Address" class="form-label">@Html.DisplayNameFor(model => model.Address)</label>
                                <span asp-validation-for="Address" class="text-danger"></span>
                                <textarea asp-for="Address" type="text" class="form-control" id="Address"></textarea>
                                
                            </div>
                        </div>

                        <div class="row mb-3 mt-3">
                            
                            <div class="col-12">
                                <div class="" style="margin-left:30px;">
                                    <button asp-controller="Manager" asp-action="Index" type="submit" value="Ekle" class="btn btn-primary">Ekle</button>
                                    <a asp-controller="Login" asp-action="Index" class="btn btn-link">Geri Dön</a>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="row">

                </div>
            </div>
        </div>
    </section>
</div>
<script src="~/argon/assets/vendor/jquery/dist/jquery.min.js"></script>
<script src="~/argon/assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/argon/assets/vendor/js-cookie/js.cookie.js"></script>
<script src="~/argon/assets/vendor/jquery.scrollbar/jquery.scrollbar.min.js"></script>
<script src="~/argon/assets/vendor/jquery-scroll-lock/dist/jquery-scrollLock.min.js"></script>
<!-- Argon JS -->
<script src="~/argon/assets/js/argon.js?v=1.2.0"></script>



@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
